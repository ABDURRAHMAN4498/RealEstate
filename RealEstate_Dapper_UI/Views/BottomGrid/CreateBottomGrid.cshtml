@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hizmet Ekleme Sayfası</h6>
                <div class="table-responsive">
                    <form asp-action="CreateBottomGrid" asp-controller="BottomGrid" method="post">
                        <label>Hizmet Adı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>İkon</label>
                        <input type="text" asp-for="Icon" class="form-control" />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <button class="btn btn-primary" type="submit">Veriyi Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

