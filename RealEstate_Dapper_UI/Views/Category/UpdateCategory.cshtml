@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategory Güncelleme Sayfası</h6>
                <div class="table-responsive">
                    <form asp-action="UpdateCategory" asp-controller="Category" method="post">
                        <input type="hidden" asp-for="@Model.CategoryId"/>
                        <input type="hidden" asp-for="@Model.CategoryStatus"/>
                        <label>Kategory</label>
                        <input type="text" asp-for="CategoryName" class="form-control" />
                        <br />
                        <button class="btn btn-primary" type="submit">Kategory Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

