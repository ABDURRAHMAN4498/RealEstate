@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <div class="table-responsive">
                    <form asp-action="CreateCategory" asp-controller="Category" method="post">
                        <label>İlan Başlığı</label>
                        <input type="text" asp-for="title" class="form-control" />
                        <br />
                        <label>Şehir</label>
                        <input type="text" asp-for="city" class="form-control" />
                        <br />
                        <label>İlçe</label>
                        <input type="text" asp-for="district" class="form-control" />
                        <br />
                        <label>Kategory</label>
                        @Html.DropDownListFor(x => x.categoryId, (List<SelectListItem>)ViewBag.Categories,new {@class="form-control"})
                        <br />
                        <label>Fiyat</label>
                        <input type="text" asp-for="price" class="form-control" />
                        <br />
                        <label>Tür</label>
                        <input type="text" asp-for="type" class="form-control" />
                        <br />
                        <label>Kapak Fotografı</label>
                        <input type="file"  class="form-control" />
                        <br />
                        <label>İlan Açık Adresi</label>
                        <textarea type="text" asp-for="title" class="form-control" rows="5"></textarea>
                        <br />
                        <button class="btn btn-primary" type="submit">Kategory Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

